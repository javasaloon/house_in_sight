%html{"xmlns:wb" => "http://open.weibo.com/wb"}
  %head
    %head 
    %meta{:charset => "utf-8"} 
    %meta{:content => "width=device-width, initial-scale=1.0", :name=> "viewport"}

    %script{:src => "http://api.map.baidu.com/api?v=1.3", :type => "text/javascript"}
    %title 买房看规划
    = stylesheet_link_tag  "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags  
      
    = yield(:head)

  %body{"data-spy" => "scroll", "data-target" => ".bs-docs-sidebar"}
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          %button.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "/"} 买房看规划
          .nav-collapse.collapse
            %ul.nav
              %li.active
                %a{:href => "#"} 最新规划
              %li
                %a{:href => "#"} 政策解读
              %li
                %a{:href => "#"} 大事记
              %li
                = link_to '我的关注', apartments_path  
              %li
                %a{:href => "#"} 关于我们  

              - if user_signed_in?
                %li
                  %a{:href => "#"}= current_user.email
                %li
                  = link_to "退出", destroy_user_session_path, :method => :delete
              - else
                %li
                  = link_to "登录", new_user_session_path
                %li
                  = link_to "注册", new_user_registration_path
            %form.navbar-form.pull-right
              %input#search_key.span3{:name => "", :placeholder => "输入地区或者街道", :type => "text"}
              %button.btn{:type => "submit"} 搜索
    .subhead.container.dash-line
      .row
        .span3
          %h3 买房看规划
          %p 买房既是生活需要也是个人资产储备
          %p 区域的现状和发展规划至关重要
          %p 帮您思考和选择更适合的房子
          %p 记录与分享您的买房历程 

        .span6
          %h4 我想要买的房子最好～～
          #preference
            .item
              两房
            .item 
              靠近地铁2号线
            .item
              小学学区房
            .item
              靠近世纪公园
            .item
              总价200左右
            .item
              2楼到5楼
            .item
              二手房
        .span2.offset1
          / ShareTo Button BEGIN
          %a.shareto_button{:href => "http://shareto.com.cn/share.html"}
            %img{:alt => "分享道", :height => "21", :src => "http://s.shareto.com.cn/btn/lg-share-cn.gif", :style => "border:0", :width => "125"}/
          %script{:charset => "utf-8", :src => "http://s.shareto.com.cn/js/shareto_button.js", :type => "text/javascript"}
          / ShareTo Button END

        
    .container
      = yield 

    %footer.footer
      .container
        %p.pull-right
          %a{:href => "#"} Back to top
        %p
          Copyright 2012 by HouseInSight.
:javascript
  $(document).ready(function(){
    var $container = $('#preference');
    $items = $('.item'); 
    $container.isotope({
        itemSelector: $items,
        masonry: {
            columnWidth: 60
        },
        getSortData: {
            selected: function ($item) {
                return ($item.hasClass('selected') ? -1000 : 0) + $item.index();
            }
        },
        sortBy: 'selected'
    }); 
    $items.click(function () {

        $container.isotope('reLayout');
    }); 
  });
                
